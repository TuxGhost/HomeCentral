@model RoleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Normalized</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.NormalizedName</td>
                <td>
                    <form asp-action="RemoveRole" method="post">
                        <input type="text" id="id" name="id" value="@role.Id" hidden>
                        <button type="submit" class="btn btn-secondary">
                            <img src="~/images/delete.png" />
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="AddRole" method="post">
    <div>
        <label for="RoleName" class="form-label">Naam</label>
        <input type="text" class="form-control" id="RoleName" name="rolename" />
        <span asp-validation-for="RoleName" class="alert-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Toevoegen</button>
</form>